    <style>
      #img-vote-container {
          display: flex;
          flex-flow: row wrap;
          width: 100%;
          gap: 5%;
          justify-content: center;

      }


      #img-vote-container .img-div {
        width: 35%;
        border: 2px solid black;
        border-radius: 10px;
        box-sizing: border-box;
        padding: 10px;

        position: relative;

        display: flex;
        justify-content: center;
        flex-flow: column;
      }

      #img-vote-container .img-div.selected {
        border-color: red;
      }


      #img-vote-container .img-div img {
        width: 100%;
      }

      #img-vote-container .vote-percentage {
        /* position: absolute; */
        /* bottom: 10px; */
